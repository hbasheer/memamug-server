source 'https://rubygems.org'

ruby '2.1.2'

gem 'rails', '4.2.2'
gem 'rails-api'

# Helps with serializeing 
gem 'active_model_serializers', '~> 0.10.0.rc2'

# Amazon S3 API
gem 'aws-sdk', '< 2.0'

# Access control
gem 'cancancan'

# For reading in the base64 encoded images we upload
gem 'data_uri'

# Load environment variables from `.env
gem 'dotenv-rails', groups: [:development, :test]

# For notifying us of errors
gem 'exception_notification', '~> 4.0.1'
gem 'exception_notification-rake', '~> 0.1.2'

# Facebook API
gem 'koala'

# Image uploads
gem 'paperclip', '~> 4.3'

# USe PostgreSQL with Active Record
gem 'pg'

# Allow serving of static assets
gem 'rails_12factor'

# Write tasks with thor instead of rake
gem 'thor', groups: [:development, :test]

# Heroku recommends serving assets with unicorn
gem 'unicorn'
